<!DOCTYPE html>
<html lang='en'>
<head>
  <title>Carrental</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id = "banner">
	<%= image_tag("car-icon.png") %>
	<%= "Car Rentals Dublin" %>
</div>
<div id="nav">
	<ul>
		<li><a href = "http://localhost:3000/">Home</li>
		<li><%= mail_to "carrentalsdublin@gmail.com", "Contact us" %></li>
		<% if !logged_in? %>
		<li><%= link_to "Login", login_path%></li>
		<% else %>
			<li>Signed in as <%= @current_user.name %></li>
			<li><%= link_to "Logout", logout_path%></li>
		<% end %>
	</ul>
</div>

<% flash.each do |key, value| %>
	<div class = "flash <%= key %>">
		<%= value %>
	</div>
<% end %>
<%= yield %>

</body>
</html>