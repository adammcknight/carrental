<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Pick up date</th>
      <th>Scheduled return date</th>
      <th>Actual return date</th>
      <th>Odometer reading</th>
      <th>Fuel level</th>
      <th>Fine</th>
      <th>Vehicle</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.pick_up_date %></td>
        <td><%= reservation.scheduled_return_date %></td>
        <td><%= reservation.actual_return_date %></td>
        <td><%= reservation.odometer_reading %></td>
        <td><%= reservation.fuel_level %></td>
        <td><%= reservation.fine %></td>
        <td><%= reservation.vehicle_id %></td>
        <td><%= reservation.customer_id %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

